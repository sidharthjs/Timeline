<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.imwazir.tl.profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name :"
        android:id="@+id/tv_name"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tv_email"
        android:layout_alignStart="@+id/tv_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_name_val"
        android:layout_toRightOf="@+id/tv_sdescrpt"
        android:layout_toEndOf="@+id/tv_sdescrpt"
        android:layout_marginLeft="-70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email :"
        android:id="@+id/tv_email"
        android:textStyle="bold"
        android:layout_alignTop="@+id/tv_email_val" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_email_val"
        android:layout_toRightOf="@+id/tv_sdescrpt"
        android:layout_toEndOf="@+id/tv_sdescrpt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="-70dp"
        android:layout_below="@+id/tv_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="URL :"
        android:id="@+id/tv_url"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_email"
        android:layout_alignRight="@+id/tv_email"
        android:layout_alignEnd="@+id/tv_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_url_val"
        android:layout_alignBottom="@+id/tv_url"
        android:layout_alignLeft="@+id/tv_email_val"
        android:layout_alignStart="@+id/tv_email_val" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Short Description"
        android:id="@+id/tv_sdescrpt"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_url"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/tv_sdescrpt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sdescrpt_val"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>
